			 bot_retorno+="/menu  | $text1\n"
			 bot_retorno+="/ayuda | $text2\n"
			 bot_retorno+="$LINE\n"
			 bot_retorno+="Si tienes inconvenientes con el BotGEN \n Contactame : @GHOST\n"
